<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admins/admin.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>sendMoney</from-outcome>
            <to-view-id>/users/sendMoney.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>requestMoney</from-outcome>
            <to-view-id>/users/requestMoney.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/sendMoney.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/requestMoney.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admins/addAdmin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adminhome</from-outcome>
            <to-view-id>/admins/admin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admins/admin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addAdmin</from-outcome>
            <to-view-id>/admins/addAdmin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>userArea</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>userManagement</from-outcome>
            <to-view-id>/admins/userList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admins/userList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adminhome</from-outcome>
            <to-view-id>/admins/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
